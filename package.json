{
  "name": "@colorless/release-script",
  "version": "1.0.0",
  "description": "customizable release script",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/longshihui/release-script.git"
  },
  "keywords": [
    "release",
    "script",
    "customizable"
  ],
  "author": "longshihui",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/longshihui/release-script/issues"
  },
  "homepage": "https://github.com/longshihui/release-script#readme",
  "devDependencies": {
    "commitizen": "^3.1.1",
    "husky": "^2.4.0",
    "lint-staged": "^8.2.0",
    "prettier": "^1.18.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "cz-conventional-changelog": "^2.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
